{% set url = path('ads_show', {'slug' : ad.slug}) %}
<div class="col-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ad.rooms }}
            chambres,
            <strong>{{ad.price}}
                &euro; /nuit</strong><br>
            <small>Pas encore not√©</small>
        </div>
        <a href="{{ url }}">
            <img src="{{ad.coverImage}}" alt="image top appartement" style="height: 200px; width: 100%; display: block">
        </a>


        <div class="card-body">
            <h3 class="card-title">
                <a href="{{ url }}" class="card-link">
                    {{ad.title}}</a>
            </h3>
            <p class="card-text">
                {{ad.intro}}</p>
            <a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>
            {% if app.user and app.user.fullName == ad.author.fullName %}
                <a href="{{ path('ads_edit', {'slug' : ad.slug}) }}" class="btn btn-secondary">Modifier</a>
            {% endif %}
        </div>
    </div>
</div>
