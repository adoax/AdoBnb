{% extends "base.html.twig" %}


{% block title %}S'enregistrer
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Cr√©ation d'un compte</h1>

        {{ form_start(form)}}

        <div class="row">
            <div class="col col-md-5">{{ form_row(form.firstName)}}</div>
            <div class="col col-md-5">{{ form_row(form.lastName)}}</div>
            <div class="col col-md-12">{{ form_row(form.email) }}</div>
