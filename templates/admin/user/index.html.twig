{% extends 'admin/base.html.twig' %}

{% block title %}Administration des Utilisateur
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5"></h1>

		<table class="table table-hover table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom complet</th>
					<th>Email</th>
					<th>Intro</th>
					<th>Reservation</th>
					<th>Annonces</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td><img src="{{ user.picture }}" alt="image de {{ user.firstName }}" class="avatar avatar-micro mr-r2">
							{{ user.FullName }}</td>
						<td>{{ user.email }}</td>
						<td>
							{{ user.intro }}
						</td>
						<td>
							<span class="badge badge-info">{{ user.bookings| length }}</span>
						</td>
						<td>
							<span class="badge badge-info">{{ user.ads | length }}</span>
						</td>
						<td>
							<a href="{{path('admin_user_edit', {'id' : user.id})}}" class="btn btn-primary">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{path('admin_user_delete', {'id' : user.id})}}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
