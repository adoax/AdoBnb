{% extends "admin/base.html.twig" %}

{% block title %}Edition de la reservation n°{{booking.id}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5">Edition de la reservation n°{{ booking.id }}</h1>
<p>je vaux {{booking.amout }}</p>
		{{form_start(form)}}
		<div class="row">
			<div class="col">
				{{form_row(form.startDate)}}
				{{form_row(form.endDate)}}
				{{form_row(form.comment)}}
			</div>
			<div class="col">
				{{form_row(form.booker)}}
				{{form_row(form.ad)}}
				<button type="submit" class="btn btn-success">
					<i class="fas fa-check"></i>
					Enregistrer
				</button>
			</div>
            {{form_end(form)}}
		</div>
	</div>
{% endblock %}
